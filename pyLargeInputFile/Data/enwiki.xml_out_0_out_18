|doctoral_students = [[Peter Griess]]&lt;/br&gt; [[Aleksandr Mikhailovich Zaitsev]]&lt;/br&gt; [[Theodor Curtius]]&lt;/br&gt; [[Ernst Otto Beckmann]]&lt;/br&gt; [[Carl Graebe]]&lt;/br&gt; [[Oscar Loew]]&lt;/br&gt; [[Constantin Fahlberg]]&lt;/br&gt; [[Nikolai Menshutkin]]&lt;/br&gt; [[Vladimir Markovnikov]]&lt;/br&gt; [[Jacob Volhard]]&lt;/br&gt; [[Ludwig Mond]]&lt;/br&gt; [[Alexander Crum Brown]]&lt;/br&gt; [[Maxwell Simpson]]&lt;/br&gt; [[Frederick Guthrie]]
