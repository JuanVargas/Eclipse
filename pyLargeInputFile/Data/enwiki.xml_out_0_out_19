| stardistancepc = 20.35
| numbermessierobjects = None
| meteorshowers = None
| bordering = [[Triangulum Australe]]&lt;br /&gt;[[Circinus]]&lt;br /&gt;[[Musca]]&lt;br /&gt;[[Chamaeleon]]&lt;br /&gt;[[Octans]]&lt;br /&gt;[[Pavo (constellation)|Pavo]]&lt;br /&gt;[[Ara (constellation)|Ara]]
