    <title>Beatrix Potter</title>
    <id>4481</id>
    <revision>
      <id>431075258</id>
      <timestamp>2011-05-26T21:09:57Z</timestamp>
      <contributor>
        <username>Feline Hymnic</username>
        <id>5609659</id>
