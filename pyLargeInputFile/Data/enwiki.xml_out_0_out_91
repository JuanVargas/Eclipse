    <title>Conventional warfare</title>
    <id>7310</id>
    <revision>
      <id>425107176</id>
      <timestamp>2011-04-21T02:50:31Z</timestamp>
      <contributor>
        <username>Dolovis</username>
        <id>12030910</id>
