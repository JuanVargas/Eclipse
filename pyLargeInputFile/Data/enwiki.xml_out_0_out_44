| wha_draft_year = 1976
| wha_draft_team = [[Edmonton Oilers]]
| height_ft = 6
| height_in = 0
| weight_lb = 195
| nationality = CAN
| birth_date = {{birth date and age|mf=yes|1956|5|12}}
