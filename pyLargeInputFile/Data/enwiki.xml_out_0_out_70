{{taxobox
|name = ''Catnip''
|image = Catnip-blossom.jpg
|image_caption = ''Nepeta cataria''
|regnum = [[Plantae]]
|unranked_divisio = [[Angiosperms]]
|unranked_classis = [[Eudicots]]
|unranked_ordo = [[Asterids]]
