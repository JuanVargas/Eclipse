 |country = United States
 |language = English
 |num_seasons = 5
 |num_episodes = {{Unbulleted list|[[List of Babylon 5 episodes|110 episodes]]|[[#Television movies|Six films]]}}
 |executive_producer = {{Unbulleted list|[[Douglas Netter]]|J. Michael Straczynski}}
 |runtime = 43 minutes
 |network = {{Unbulleted list|[[Prime Time Entertainment Network|PTEN]] (1994–1997)|[[Turner Network Television|TNT]] (1998)}}
 |first_aired = {{Start date|1993|02|22}}
