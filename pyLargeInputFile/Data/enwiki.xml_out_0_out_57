  <page>
    <title>Balfour Declaration of 1917</title>
    <id>4820</id>
    <revision>
      <id>430821335</id>
      <timestamp>2011-05-25T10:30:11Z</timestamp>
      <contributor>
        <username>ZéroBot</username>
        <id>11969601</id>
