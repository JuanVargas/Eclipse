  <page>
    <title>Telecommunications in Belgium</title>
    <id>3545</id>
    <revision>
      <id>402300335</id>
      <timestamp>2010-12-14T08:06:20Z</timestamp>
      <contributor>
        <ip>109.236.140.22</ip>
