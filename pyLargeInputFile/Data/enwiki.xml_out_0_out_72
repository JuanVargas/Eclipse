  <page>
    <title>Climbing</title>
    <id>5857</id>
    <revision>
      <id>430987535</id>
      <timestamp>2011-05-26T09:54:15Z</timestamp>
      <contributor>
        <username>Escarbot</username>
        <id>1554195</id>
