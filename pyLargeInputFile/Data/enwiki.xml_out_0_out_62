| synonyms_ref=&lt;ref name=&quot;1997McKenna&quot;&gt;{{cite book|last1=McKenna|first1=MC|last2=Bell|first2=SK|title=Classification of Mammals: Above the Species Level|publisher=Columbia University Press|pages=334|year=1997|isbn=0-231-11013-6}}&lt;/ref&gt;
