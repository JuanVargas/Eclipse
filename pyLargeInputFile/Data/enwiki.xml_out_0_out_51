  <page>
    <title>Buddhist philosophy</title>
    <id>4468</id>
    <revision>
      <id>430459313</id>
      <timestamp>2011-05-23T04:55:30Z</timestamp>
      <contributor>
        <ip>82.181.33.195</ip>
