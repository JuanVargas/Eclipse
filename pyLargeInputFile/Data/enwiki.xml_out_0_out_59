    &lt;td valign=&quot;top&quot;&gt;(''n''&amp;nbsp;−&amp;nbsp;1)¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
