    &lt;td valign=&quot;top&quot;&gt;1¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;0&lt;/td&gt;
&lt;/tr&gt;
&lt;tr&gt;
    &lt;td valign=&quot;top&quot;&gt;''n''¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;(''n''&amp;nbsp;−&amp;nbsp;1)¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;3¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;2¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;1¡&lt;/td&gt;
&lt;/tr&gt;
&lt;tr&gt;
    &lt;td valign=&quot;top&quot;&gt;(''n''&amp;nbsp;+&amp;nbsp;1)¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;''n''¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;(''n''&amp;nbsp;−&amp;nbsp;1)¡&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
    &lt;td valign=&quot;top&quot;&gt;...&lt;/td&gt;
