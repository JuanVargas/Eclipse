  <page>
    <title>Anarchism</title>
    <id>12</id>
    <revision>
      <id>430613720</id>
      <timestamp>2011-05-24T02:31:43Z</timestamp>
      <contributor>
        <username>Malik Shabazz</username>
        <id>3020778</id>
