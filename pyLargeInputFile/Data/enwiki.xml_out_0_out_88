{{taxobox
|name = Cranberry
|image = Cranberry bog.jpg
|image_caption = Cranberry bush with fruit partially submerged
|regnum = [[Plantae]]
|unranked_divisio = [[Angiosperms]]
|unranked_classis = [[Eudicots]]
|unranked_ordo = [[Asterids]]
|ordo = [[Ericales]]
|familia = [[Ericaceae]]
