      <contributor>
        <username>Richard Arthur Norton (1958- )</username>
        <id>158051</id>
      </contributor>
      <comment>[[Category:Mackay Trophy winners]]</comment>
      <text xml:space="preserve">{{pp-semi-blp|small=yes}}
