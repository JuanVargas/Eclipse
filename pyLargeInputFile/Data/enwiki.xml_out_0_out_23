| 1870 || 4,880,009 || 12.7% || – || –
|-
| 1880 || 6,580,793 || 13.1% || – || –
|-
| 1890 || 7,488,788 || 11.9% || – || –
|-
| 1900 || 8,833,994 || 11.6% || – || –
|-
| 1910 || 9,827,763 || 10.7% || – || –
|-
| 1920 || 10.5 million || 9.9% || – || –
|-
| 1930 || 11.9 million || 9.7% (lowest) || – || –
