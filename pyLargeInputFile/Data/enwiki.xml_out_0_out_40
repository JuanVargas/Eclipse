  <page>
    <title>Economy of the British Virgin Islands</title>
    <id>3652</id>
    <revision>
      <id>424536739</id>
      <timestamp>2011-04-17T15:31:52Z</timestamp>
      <contributor>
        <username>Dolovis</username>
        <id>12030910</id>
