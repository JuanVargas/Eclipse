  <page>
    <title>Costa Smeralda</title>
    <id>7780</id>
    <revision>
      <id>428238031</id>
      <timestamp>2011-05-09T12:37:20Z</timestamp>
      <contributor>
        <username>Skinsmoke</username>
        <id>899547</id>
