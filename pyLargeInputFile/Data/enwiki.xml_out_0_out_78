    <title>Cell nucleus</title>
    <id>6235</id>
    <revision>
      <id>430751964</id>
      <timestamp>2011-05-24T22:47:21Z</timestamp>
      <contributor>
        <username>Mindmatrix</username>
        <id>160367</id>
      </contributor>
