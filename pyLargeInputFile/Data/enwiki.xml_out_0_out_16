    <title>Alfonso IV of Aragon</title>
    <id>1684</id>
    <revision>
      <id>413485340</id>
      <timestamp>2011-02-12T14:05:33Z</timestamp>
      <contributor>
        <username>Yobot</username>
        <id>7328338</id>
