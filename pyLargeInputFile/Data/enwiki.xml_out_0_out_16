| birth_date   ={{birth date|1109|6|25|df=y}}
| birth_place  =[[Guimarães]] (traditionally) and [[Viseu]] (documented), [[County of Portugal]]
| death_date   ={{death date and age|1185|12|6|1109|6|25|df=y}}
| death_place  =[[Coimbra]], [[Kingdom of Portugal]]
| place of burial =[[Santa Cruz Monastery]], [[Coimbra]], [[Coimbra (district)|District of Coimbra]], [[Portugal]]
| religion        =[[Catholic Church|Roman Catholicism]]
