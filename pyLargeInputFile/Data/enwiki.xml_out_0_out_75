| publisher     = [[Jonathan Cape]]
| release_date  = 1973
| english_release_date =
| media_type    = Print ([[Hardcover]] &amp; [[Paperback]])
| pages         = 
| isbn          = 0-224-00782-3
| dewey= 823/.9/14
